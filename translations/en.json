{
    "title": "DST Transition Sensor",
    "config": {
        "step": {
            "user": {
                "title": "Setup DST Transition Sensor",
                "description": "Do you want to add the DST Transition Sensor? It will automatically use the timezone configured in your Home Assistant settings."
            }
        },
        "abort": {
            "single_instance_allowed": "Only a single instance of this integration is allowed."
        }
    },
    "entity": {
        "sensor": {
            "dst_change_sensor": {
                "name": "Next DST Change",
                "default": "mdi:battery-unknown",
                "range": {
                    "1": "mdi:battery",
                    "7": "mdi:battery-90",
                    "14": "mdi:battery-80",
                    "21": "mdi:battery-70",
                    "28": "mdi:battery-60",  
                    "35": "mdi:battery-50",
                    "42": "mdi:battery-40",
                    "49": "mdi:battery-30",
                    "56": "mdi:battery-20",                  
                    "63": "mdi:battery-10",    
                    "70": "mdi:battery-outline"                                        
                }                
            }
        }  
    },
    "entity_component": {
        "sensor": {
            "state_attributes": {
                "current_period": {
                    "state": {
                        "summer_time": "Summer Time",
                        "winter_time": "Winter Time"
                    }
                },
                "direction": {
                    "state": {
                        "move_forward": "Move Forward",
                        "move_back": "Move Back"
                    }
                },
                "message": {
                    "state": {
                        "": "",
                        "move_forward_message": "Clocks go forward (lose 1 hour)",
                        "move_back_message": "Clocks go back (gain 1 hour)"
                    }
                }
            }
        }
    }    
}