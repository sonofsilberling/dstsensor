{
    "title": "Zeitumstellungssensor",
    "config": {
        "step": {
            "user": {
                "title": "Zeitumstellungssensor einrichten",
                "description": "Möchten Sie den Zeitumstellungssensor hinzufügen? Er wird automatisch die in Ihren Home Assistant-Einstellungen konfigurierte Zeitzone verwenden."
            }
        },
        "abort": {
            "single_instance_allowed": "Es ist nur eine einzige Instanz dieser Integration erlaubt."
        }
    },
    "entity": {
        "sensor": {
            "dst_change_sensor": {
                "name": "Nächste Zeitumstellung",
                "default": "mdi:battery-unknown",
                "range": {
                    "1": "mdi:battery",
                    "7": "mdi:battery-90",
                    "14": "mdi:battery-80",
                    "21": "mdi:battery-70",
                    "28": "mdi:battery-60",  
                    "35": "mdi:battery-50",
                    "42": "mdi:battery-40",
                    "49": "mdi:battery-30",
                    "56": "mdi:battery-20",                  
                    "63": "mdi:battery-10",    
                    "70": "mdi:battery-outline"                                        
                }                
            }
        }  
    },
    "entity_component": {
        "sensor": {
            "state_attributes": {
                "current_period": {
                    "state": {
                        "summer_time": "Sommerzeit",
                        "winter_time": "Winterzeit"
                    }
                },
                "direction": {
                    "state": {
                        "move_forward": "Vorstellen",
                        "move_back": "Zurückstellen"
                    }
                },
                "message": {
                    "state": {
                        "": "",
                        "move_forward_message": "Die Uhren werden vorgestellt (1 Stunde weniger)",
                        "move_back_message": "Die Uhren werden zurückgestellt (1 Stunde mehr)"
                    }
                }
            }
        }
    }    
}